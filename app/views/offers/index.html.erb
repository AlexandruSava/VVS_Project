<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Country</th>
      <th>Location</th>
      <th>Meals</th>
      <th>Price</th>
      <th>Stars</th>
      <th>Rating</th>
      <th>Cleaning</th>
      <th>Food</th>
      <th>Staff</th>
      <th>Confort</th>
      <th>Host name</th>
      <th>Minimum stay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.name %></td>
        <td><%= offer.description %></td>
        <td><%= offer.phone %></td>
        <td><%= offer.email %></td>
        <td><%= offer.country %></td>
        <td><%= offer.location %></td>
        <td><%= offer.meals %></td>
        <td><%= offer.price %></td>
        <td><%= offer.stars %></td>
        <td><%= offer.rating %></td>
        <td><%= offer.cleaning %></td>
        <td><%= offer.food %></td>
        <td><%= offer.staff %></td>
        <td><%= offer.confort %></td>
        <td><%= offer.host_name %></td>
        <td><%= offer.minimum_stay %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
